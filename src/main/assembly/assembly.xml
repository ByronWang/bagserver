<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>bin</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>nebula</baseDirectory>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0744</fileMode>
			<includes>
				<include>*.sh</include>
				<include>*.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>conf</outputDirectory>
			<fileMode>0777</fileMode>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/resources/htdocs</directory>
			<outputDirectory>htdocs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>apps/system</directory>
			<outputDirectory>apps/system</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>apps/bagserver</directory>
			<outputDirectory>apps/bagserver</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/java/bagserver</directory>
			<outputDirectory>apps/bagserver</outputDirectory>
			<includes>
				<include>*.java</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>logs</directory>
			<outputDirectory>logs</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
